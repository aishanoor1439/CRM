@model ExcellOnServices.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle mr-2"></i>Delete Client
                        </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="background-color:#271940;">
                        <div class="alert alert-danger">
                            <h5><i class="icon fas fa-exclamation-circle"></i> Warning!</h5>
                            Are you sure you want to delete this client? This action cannot be undone.
                        </div>
                        
                        <div class="text-center mb-4">
                            <div class="client-avatar bg-danger d-inline-flex align-items-center justify-content-center rounded-circle" 
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                <i class="fas fa-building"></i>
                            </div>
                            <h4 class="mt-2 text-light">@Model.CompanyName</h4>
                            <p class="text-muted">Contact: @Model.ContactPerson</p>
                        </div>
                        
                        <dl class="row">
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </dt>
                            <dd class="col-sm-9">
                                <span class="form-control-plaintext text-light font-weight-bold">@Html.DisplayFor(model => model.CompanyName)</span>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.ContactPerson)
                            </dt>
                            <dd class="col-sm-9">
                                <span class="form-control-plaintext text-light font-weight-bold">@Html.DisplayFor(model => model.ContactPerson)</span>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="input-group" style="max-width: 400px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark">@Html.DisplayFor(model => model.Email)</span>
                                </div>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.Phone)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="input-group" style="max-width: 400px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark">@Html.DisplayFor(model => model.Phone)</span>
                                </div>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="text-light p-2" style="background-color: rgba(255,255,255,0.1); border-radius: 4px;">
                                    @if (!string.IsNullOrEmpty(Model.Address))
                                    {
                                        @Html.DisplayFor(model => model.Address)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No address provided</span>
                                    }
                                </div>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.RegistrationDate)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="input-group" style="max-width: 300px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark">
                                        @Model.RegistrationDate.ToString("MMMM dd, yyyy")
                                    </span>
                                </div>
                                <small class="form-text text-muted">Registered @((DateTime.Now - Model.RegistrationDate).Days) days ago</small>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>
                            <dd class="col-sm-9">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success p-2">
                                        <i class="fas fa-check-circle mr-1"></i> Active Client
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-danger p-2">
                                        <i class="fas fa-times-circle mr-1"></i> Inactive Client
                                    </span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" value="Delete" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Client
                            </button>
                            <a asp-action="Index" class="btn btn-default ml-2">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>