@model ExcellOnServices.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle mr-2"></i>Delete Payment Record
                        </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="background-color:#271940;">
                        <div class="alert alert-danger">
                            <h5><i class="icon fas fa-exclamation-circle"></i> Warning!</h5>
                            Are you sure you want to delete this payment record? This action cannot be undone and will be permanently removed from the system.
                        </div>
                        
                        <div class="text-center mb-4">
                            <div class="payment-avatar bg-danger d-inline-flex align-items-center justify-content-center rounded-circle" 
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                <i class="fas fa-money-bill-slash"></i>
                            </div>
                            <h4 class="mt-2 text-light">Payment Deletion</h4>
                            <p class="text-muted">Transaction ID: PAY-@Model.Id.ToString("D6")</p>
                        </div>
                        
                        <dl class="row">
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.Client)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="input-group" style="max-width: 400px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="fas fa-building"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark font-weight-bold">
                                        @Html.DisplayFor(model => model.Client.CompanyName)
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Client.ContactPerson))
                                {
                                    <small class="form-text text-muted">Contact: @Model.Client.ContactPerson</small>
                                }
                                @if (!string.IsNullOrEmpty(Model.Client.Email))
                                {
                                    <small class="form-text text-muted">Email: @Model.Client.Email</small>
                                }
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="input-group" style="max-width: 300px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="fas fa-money-bill-wave"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark font-weight-bold text-danger">
                                        $@Model.Amount.ToString("N2")
                                    </span>
                                </div>
                                <small class="form-text text-muted">
                                    <strong>Financial Impact:</strong> This amount will be removed from payment records
                                </small>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.PaymentDate)
                            </dt>
                            <dd class="col-sm-9">
                                <div class="input-group" style="max-width: 300px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark">
                                        @Model.PaymentDate.ToString("MMMM dd, yyyy")
                                    </span>
                                </div>
                                <small class="form-text text-muted">
                                    Recorded @((DateTime.Now - Model.PaymentDate).Days) days ago
                                </small>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.PaymentMethod)
                            </dt>
                            <dd class="col-sm-9">
                                @{
                                    var methodBadge = Model.PaymentMethod switch
                                    {
                                        "Cash" => "badge badge-secondary",
                                        "Credit Card" => "badge badge-primary",
                                        "Bank Transfer" => "badge badge-info",
                                        "Check" => "badge badge-warning",
                                        "Online Payment" => "badge badge-success",
                                        _ => "badge badge-light"
                                    };
                                }
                                <div class="input-group" style="max-width: 300px;">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark text-light border-dark">
                                            <i class="fas fa-credit-card"></i>
                                        </span>
                                    </div>
                                    <span class="form-control bg-dark text-light border-dark">
                                        @Html.DisplayFor(model => model.PaymentMethod)
                                    </span>
                                </div>
                                <div class="mt-1">
                                    <span class="@methodBadge p-2">
                                        @Html.DisplayFor(model => model.PaymentMethod)
                                    </span>
                                </div>
                            </dd>
                            
                            <dt class="col-sm-3 text-light">
                                @Html.DisplayNameFor(model => model.Notes)
                            </dt>
                            <dd class="col-sm-9">
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <div class="text-light p-3" style="background-color: rgba(255,255,255,0.1); border-radius: 4px; min-height: 80px;">
                                        <i class="fas fa-sticky-note mr-2"></i> @Html.DisplayFor(model => model.Notes)
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted p-3" style="background-color: rgba(255,255,255,0.05); border-radius: 4px; min-height: 80px;">
                                        <i class="fas fa-sticky-note mr-2"></i> No notes provided for this payment
                                    </div>
                                }
                            </dd>
                        </dl>
                        
                        <div class="alert alert-warning mt-4">
                            <h6><i class="icon fas fa-exclamation-triangle"></i> Before you delete:</h6>
                            <ul class="mb-0">
                                <li>This payment record will be permanently removed</li>
                                <li>Financial reports will need to be regenerated</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" value="Delete" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Payment
                            </button>
                            <a asp-action="Index" class="btn btn-default ml-2">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>