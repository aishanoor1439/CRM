@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner" style="background-color:#271940;">
                <h3>@ViewBag.ServicesCount</h3>
                <p>Total Services</p>
            </div>
            <div class="icon">
                <i class="fas fa-concierge-bell"></i>
            </div>
            <a asp-controller="Services" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner" style="background-color:#271940;">
                <h3>@ViewBag.DepartmentsCount</h3>
                <p>Total Departments</p>
            </div>
            <div class="icon">
                <i class="fas fa-building"></i>
            </div>
            <a asp-controller="Departments" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner" style="background-color:#271940;">
                <h3>@ViewBag.EmployeesCount</h3>
                <p>Total Employees</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a asp-controller="Employees" asp-action="Index" class="small-box-footer" style="color: #FFFFFF!important;">
                More info <i class="fas fa-arrow-circle-right" style="color: #FFFFFF;"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner" style="background-color:#271940;">
                <h3>@ViewBag.ClientsCount</h3>
                <p>Total Clients</p>
            </div>
            <div class="icon">
                <i class="fas fa-handshake"></i>
            </div>
            <a asp-controller="Clients" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Quick Reports Section -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quick Reports</h3>
            </div>
            <div class="card-body" style="background-color:#271940;">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-controller="Reports" asp-action="Dashboard" class="btn btn-info btn-block">
                            <i class="fas fa-tachometer-alt mr-2"></i>Dashboard Report
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Reports" asp-action="LatePayments" class="btn btn-warning btn-block">
                            <i class="fas fa-clock mr-2"></i>Late Payments
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Reports" asp-action="ServiceUsage" class="btn btn-success btn-block">
                            <i class="fas fa-chart-line mr-2"></i>Service Usage
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Reports" asp-action="ClientSummary" class="btn btn-primary btn-block">
                            <i class="fas fa-users mr-2"></i>Client Summary
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Welcome Card -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Welcome to ExcellOn Services</h3>
            </div>
            <div class="card-body" style="background-color:#271940;">
                <p>This system manages:</p>
                <ul>
                    <li><strong>Services:</strong> In-bound, Out-bound, and Tele Marketing</li>
                    <li><strong>Departments:</strong> HR, Administration, Service, Training, etc.</li>
                    <li><strong>Employees:</strong> Employee records and assignments</li>
                    <li><strong>Clients:</strong> Client information and service preferences</li>
                </ul>
                <div class="alert alert-info">
                    <i class="icon fas fa-info"></i>
                    Use the sidebar menu to navigate between sections.
                </div>
            </div>
        </div>
    </div>
</div>