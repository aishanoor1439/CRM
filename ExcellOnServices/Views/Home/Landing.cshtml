@{
    ViewData["Title"] = "ExcellOn Consulting Services";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ECS - Transforming Strategy into Smart Digital Growth</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Orbitron:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.css">
    
    <style>
        /* Additional custom styles */
        :root {
            --neon-blue: #00f5ff;
            --neon-purple: #9d4edd;
            --deep-purple: #10002b;
            --deep-blue: #0a0e2e;
            --glow-blue: rgba(0, 245, 255, 0.7);
            --glow-purple: rgba(157, 78, 221, 0.7);
        }
        
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            overflow-x: hidden;
        }
    </style>
</head>
<body class="fintech-landing">
    <!-- Background Gradient -->
    <div class="fintech-bg"></div>
    
    <!-- Navigation and Logo Container -->
    <div class="header-container">
        <!-- Minimal Circular Tech Logo -->
        <div class="tech-logo">
            <div class="logo-circle">
                <div class="logo-inner"></div>
                <div class="logo-pulse"></div>
                <span class="logo-text">ECS</span>
            </div>
        </div>
        
        <!-- Navigation Bar -->
        <nav class="fintech-nav">
            <ul class="nav-menu">
                <li><a href="/Identity/Account/Login?ReturnUrl=%2FHome%2FIndex" class="nav-link">Login</a></li>
                <li><a href="/Identity/Account/Register?ReturnUrl=%2FHome%2FIndex" class="nav-link">Register</a></li>
            </ul>
        </nav>
    </div>
    
    <!-- Main Content Container -->
    <div class="main-content-wrapper">
        <!-- Left Side - Holographic Digital Globe -->
        <div class="holographic-globe-section">
            <div class="globe-wrapper">
                <!-- Digital Globe Container -->
                <div class="digital-globe" id="digitalGlobe">
                    <!-- Globe will be generated by JavaScript -->
                </div>
                
                <!-- Hexagonal Icons Grid - Perfectly aligned in circle -->
                <div class="hex-grid" id="hexGrid">
                    <!-- Hexagons will be positioned by JavaScript -->
                </div>
            </div>
        </div>
        
        <!-- Right Side - Content -->
        <div class="fintech-content">
            <div class="content-wrapper">
                <h1 class="fintech-headline">
                    <span class="headline-main">Transforming Strategy into</span>
                    <span class="headline-highlight">Smart Digital Growth</span>
                </h1>
                
                <div class="fintech-description">
                    <p>Excell-on Consulting Services (ECS) empowers organizations to design innovative business and commerce strategies that drive real impact. By aligning business goals with cutting-edge IT solutions, ECS enables clients to leverage emerging technologies, create forward-thinking products and services, and thrive in a rapidly evolving digital economy.</p>
                </div>
                
                <!-- Social Media Icons (Vertical) -->
                <div class="social-icons-vertical">
                    <a href="#" class="social-icon">
                        <i class="fab fa-instagram"></i>
                        <div class="icon-glow"></div>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                        <div class="icon-glow"></div>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                        <div class="icon-glow"></div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional decorative elements -->
    <div class="floating-elements">
        <div class="data-stream stream-1"></div>
        <div class="data-stream stream-2"></div>
        <div class="holographic-line line-1"></div>
        <div class="holographic-line line-2"></div>
    </div>

    <!-- Landing JavaScript -->
    <script src="~/js/landing.js"></script>
    
    <!-- FinTech Globe JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize the holographic digital globe
        initHolographicGlobe();
        
        // Initialize perfectly aligned hexagonal grid
        initHexagonalGrid();
        
        // Initialize data stream animations
        initDataStreams();
    });
    
    function initHolographicGlobe() {
        const globe = document.getElementById('digitalGlobe');
        if (!globe) return;
        
        // Create globe particles
        createGlobeParticles(globe);
        
        // Create wireframe
        createGlobeWireframe(globe);
        
        // Create light trails
        createLightTrails(globe);
        
        // Add globe rotation
        globe.addEventListener('mousemove', function(e) {
            const rect = globe.getBoundingClientRect();
            const x = e.clientX - rect.left - rect.width / 2;
            const y = e.clientY - rect.top - rect.height / 2;
            
            const rotateY = x / 50;
            const rotateX = -y / 50;
            
            globe.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            
            // Also rotate hex grid with globe
            const hexGrid = document.getElementById('hexGrid');
            if (hexGrid) {
                hexGrid.style.transform = `rotateX(${rotateX * 0.5}deg) rotateY(${rotateY * 0.5}deg)`;
            }
        });
        
        globe.addEventListener('mouseleave', function() {
            globe.style.transform = 'rotateX(0) rotateY(0)';
            const hexGrid = document.getElementById('hexGrid');
            if (hexGrid) {
                hexGrid.style.transform = 'rotateX(0) rotateY(0)';
            }
        });
    }
    
    function initHexagonalGrid() {
        const hexGrid = document.getElementById('hexGrid');
        if (!hexGrid) return;
        
        // Clear any existing hexagons
        hexGrid.innerHTML = '';
        
        // Hexagon data: icon class and label
        const hexData = [
            { icon: 'fas fa-chart-line', label: 'Analytics' },
            { icon: 'fas fa-chart-bar', label: 'Charts' },
            { icon: 'fas fa-users', label: 'Users' },
            { icon: 'fas fa-clock', label: 'Time' },
            { icon: 'fas fa-seedling', label: 'Growth' },
            { icon: 'fas fa-database', label: 'Data' }
        ];
        
        // SMALLER: Create hexagon container dimensions for smaller globe
        const containerRadius = 145;
        const hexCount = hexData.length;
        
        for (let i = 0; i < hexCount; i++) {
            // Calculate angle for this hexagon (evenly spaced around circle)
            const angle = (i * (360 / hexCount)) * (Math.PI / 180);
            
            // Calculate position (x, y) around the circle
            const x = containerRadius * Math.cos(angle);
            const y = containerRadius * Math.sin(angle);
            
            // Create hexagon element
            const hexagon = document.createElement('div');
            hexagon.className = 'hexagon';
            hexagon.dataset.index = i;
            hexagon.dataset.label = hexData[i].label;
            
            // Set position
            hexagon.style.left = `calc(50% + ${x}px)`;
            hexagon.style.top = `calc(50% + ${y}px)`;
            
            // Create icon
            const icon = document.createElement('i');
            icon.className = hexData[i].icon;
            
            // Create glow effect
            const glow = document.createElement('div');
            glow.className = 'hex-glow';
            
            // Create label
            const label = document.createElement('div');
            label.className = 'hex-label';
            label.textContent = hexData[i].label;
            
            // Assemble hexagon
            hexagon.appendChild(icon);
            hexagon.appendChild(glow);
            hexagon.appendChild(label);
            
            // Add hover effects - adjusted for smaller globe
            hexagon.addEventListener('mouseenter', function() {
                this.style.transform = `translate(-50%, -50%) scale(1.25) translateZ(15px)`;
                this.style.zIndex = '100';
                this.style.filter = 'brightness(1.4)';
                
                const glow = this.querySelector('.hex-glow');
                if (glow) {
                    glow.style.opacity = '1';
                    glow.style.transform = 'scale(1.4)';
                }
                
                const label = this.querySelector('.hex-label');
                if (label) {
                    label.style.opacity = '1';
                    label.style.transform = 'translateY(0)';
                }
            });
            
            hexagon.addEventListener('mouseleave', function() {
                this.style.transform = 'translate(-50%, -50%) scale(1)';
                this.style.zIndex = '10';
                this.style.filter = 'brightness(1)';
                
                const glow = this.querySelector('.hex-glow');
                if (glow) {
                    glow.style.opacity = '0.6';
                    glow.style.transform = 'scale(1)';
                }
                
                const label = this.querySelector('.hex-label');
                if (label) {
                    label.style.opacity = '0';
                    label.style.transform = 'translateY(10px)';
                }
            });
            
            // Add pulsing animation
            setInterval(() => {
                if (Math.random() > 0.8) {
                    hexagon.style.filter = 'brightness(1.8) drop-shadow(0 0 12px var(--neon-blue))';
                    
                    setTimeout(() => {
                        hexagon.style.filter = 'brightness(1) drop-shadow(0 0 4px var(--neon-blue))';
                    }, 500);
                }
            }, 3000 + Math.random() * 4000);
            
            hexGrid.appendChild(hexagon);
        }
        
        // Add connection lines between hexagons
        createHexagonConnections();
    }
    
    function createHexagonConnections() {
        const hexGrid = document.getElementById('hexGrid');
        if (!hexGrid) return;
        
        const hexagons = hexGrid.querySelectorAll('.hexagon');
        const hexCount = hexagons.length;
        
        // Create lines connecting each hexagon to its neighbors
        for (let i = 0; i < hexCount; i++) {
            const nextIndex = (i + 1) % hexCount;
            
            const hex1 = hexagons[i];
            const hex2 = hexagons[nextIndex];
            
            createConnectionLine(hex1, hex2);
        }
        
        // Also create lines across the circle (optional)
        if (hexCount === 6) {
            // Connect opposite hexagons
            createConnectionLine(hexagons[0], hexagons[3]);
            createConnectionLine(hexagons[1], hexagons[4]);
            createConnectionLine(hexagons[2], hexagons[5]);
        }
    }
    
    function createConnectionLine(element1, element2) {
        const line = document.createElement('div');
        line.className = 'hex-connection';
        
        // Get positions
        const rect1 = element1.getBoundingClientRect();
        const rect2 = element2.getBoundingClientRect();
        const containerRect = document.querySelector('.globe-wrapper').getBoundingClientRect();
        
        const x1 = rect1.left + rect1.width / 2 - containerRect.left;
        const y1 = rect1.top + rect1.height / 2 - containerRect.top;
        const x2 = rect2.left + rect2.width / 2 - containerRect.left;
        const y2 = rect2.top + rect2.height / 2 - containerRect.top;
        
        // Calculate distance and angle
        const distance = Math.sqrt(Math.pow(x2 - x1, 2) + Math.pow(y2 - y1, 2));
        const angle = Math.atan2(y2 - y1, x2 - x1) * 180 / Math.PI;
        
        // Set line properties
        line.style.width = `${distance}px`;
        line.style.left = `${x1}px`;
        line.style.top = `${y1}px`;
        line.style.transform = `rotate(${angle}deg)`;
        
        // Add pulsing animation
        line.style.animationDelay = `${Math.random() * 2}s`;
        
        document.querySelector('.globe-wrapper').appendChild(line);
    }
    
    function createGlobeParticles(container) {
        const particleCount = 250; 
        
        for (let i = 0; i < particleCount; i++) {
            const particle = document.createElement('div');
            particle.className = 'globe-particle';
            
            // Random position on sphere
            const theta = Math.random() * Math.PI * 2;
            const phi = Math.acos((Math.random() * 2) - 1);
            
            // Convert to Cartesian coordinates
            const radius = 115;
            const x = radius * Math.sin(phi) * Math.cos(theta);
            const y = radius * Math.sin(phi) * Math.sin(theta);
            const z = radius * Math.cos(phi);
            
            particle.style.left = `calc(50% + ${x}px)`;
            particle.style.top = `calc(50% + ${y}px)`;
            
            // Size and color
            const size = Math.random() * 1.5 + 0.8;
            particle.style.width = `${size}px`;
            particle.style.height = `${size}px`;
            
            // Color based on position
            const colorIntensity = (z + radius) / (2 * radius);
            if (Math.random() > 0.5) {
                particle.style.backgroundColor = `rgba(0, 245, 255, ${0.15 + colorIntensity * 0.25})`;
                particle.style.boxShadow = `0 0 ${size * 1.5}px rgba(0, 245, 255, ${0.25 + colorIntensity * 0.3})`;
            } else {
                particle.style.backgroundColor = `rgba(157, 78, 221, ${0.15 + colorIntensity * 0.25})`;
                particle.style.boxShadow = `0 0 ${size * 1.5}px rgba(157, 78, 221, ${0.25 + colorIntensity * 0.3})`;
            }
            
            // Animation
            const duration = 10 + Math.random() * 20;
            const delay = Math.random() * 5;
            particle.style.animation = `particleFloat ${duration}s infinite linear ${delay}s`;
            
            container.appendChild(particle);
        }
    }
    
    function createGlobeWireframe(container) {
        // Create latitude lines
        for (let lat = -80; lat <= 80; lat += 20) {
            const line = document.createElement('div');
            line.className = 'globe-wireframe latitude';
            line.style.setProperty('--lat', lat);
            
            container.appendChild(line);
        }
        
        // Create longitude lines
        for (let lon = 0; lon < 180; lon += 20) {
            const line = document.createElement('div');
            line.className = 'globe-wireframe longitude';
            line.style.setProperty('--lon', lon);
            
            container.appendChild(line);
        }
    }
    
    function createLightTrails(container) {
        const trailCount = 6;
        
        for (let i = 0; i < trailCount; i++) {
            const trail = document.createElement('div');
            trail.className = 'light-trail';
            
            // Random properties
            const size = Math.random() * 12 + 6;
            const duration = Math.random() * 15 + 10;
            const delay = Math.random() * 10;
            
            trail.style.width = `${size}px`;
            trail.style.height = `${size}px`;
            trail.style.animation = `lightTrail ${duration}s infinite linear ${delay}s`;
            
            // Random color
            if (Math.random() > 0.5) {
                trail.style.backgroundColor = 'rgba(0, 245, 255, 0.08)';
                trail.style.boxShadow = `0 0 ${size}px rgba(0, 245, 255, 0.4)`;
            } else {
                trail.style.backgroundColor = 'rgba(157, 78, 221, 0.08)';
                trail.style.boxShadow = `0 0 ${size}px rgba(157, 78, 221, 0.4)`;
            }
            
            container.appendChild(trail);
        }
    }
    
    function initDataStreams() {
        const streams = document.querySelectorAll('.data-stream');
        
        streams.forEach(stream => {
            // Create flowing data points
            for (let i = 0; i < 15; i++) {
                const dataPoint = document.createElement('div');
                dataPoint.className = 'data-point';
                
                const delay = Math.random() * 5;
                const duration = 3 + Math.random() * 4;
                
                dataPoint.style.animationDelay = `${delay}s`;
                dataPoint.style.animationDuration = `${duration}s`;
                
                stream.appendChild(dataPoint);
            }
        });
    }
</script>
</body>
</html>